  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-java": "^0.23.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.7.3",
    "@types/prompts": "^2.4.9",
    "commander": "^12.1.0",
    "esbuild": "^0.23.1",
    "ncp": "^2.0.0",
    "prompts": "^2.4.2",
    "ts-node": "^10.9.2",
