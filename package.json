{
  "name": "@ddd-tool/create-oneboot",
  "version": "0.0.1-alpha.0",
  "private": false,
  "description": "",
  "type": "module",
  "bin": {
    "oneboot-tool": "./bin/oneboot-tool.cjs"
  },
  "files": [
    "./bin"
  ],
  "engines": {
    "node": ">=v18.3.0"
  },
  "scripts": {
    "dev": "pnpm build && node ./bin/oneboot-tool.cjs --non-interactive genVoMapper --project-root=F:/idea_projects/oneboot --input-module=domain-preset_sys --output-module=preset_sys",
    "build": "pnpm build-ts",
    "build-ts": "tsc --noEmit --esModuleInterop && zx ./scripts/build.mjs",
    "build-wasm": "wasm-pack build ./src-rust/ --target nodejs --out-dir ../pkg && ncp ./pkg/wasm_bg.wasm ./bin/wasm_bg.wasm",
    "test": "node --loader ts-node/esm --test tests/index.test.ts",
    "verify": "tsc src/index.ts --noEmit --esModuleInterop"
  },
  "keywords": [
    "oneboot"
  ],
  "author": {
    "name": "AlphaFoxz@github.com",
