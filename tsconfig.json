{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/*", "src/**/*", "__test__/*", "__test__/**/*"],
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": ["DOM"],
    "types": ["node"]
  }
}
