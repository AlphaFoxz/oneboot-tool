{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "src/*",
    "src/**/*",
    "test/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": [
      "DOM"
    ],
    "types": [
      "node",
    ],
  },
}